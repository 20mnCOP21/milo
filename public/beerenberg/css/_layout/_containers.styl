#page-content
    height 100%
    min-height 100%
    position relative
    z-index 2

.content-centered
    max-width $max-width
    margin 0 auto

.centered
    margin 0 auto

.section
    @extends .clearfix
    position relative

/* project heading */
.section-heading
    width 100%

    &.bg-img
        background-image url(attr(data-bg-img))
        background-position center
        background-repeat no-repeat
        background-size cover

    for $item in $colors
        &.bg-{$item}-shadowed
            box-shadow inset 0 0 9rem darken($item[1], 50%)

.project-title
    display inline-block
    min-height 6rem
    font-size 6rem
    font-weight 900
    text-transform uppercase
    line-height 0.9

.project-summary
    font-size 2.7rem
    line-height 1.2

    small
        font-size 0.6em

.section-share
    li
        display inline-block

        a
            display block
            width 7.2rem
            height 7.2rem
            margin 0 0.6rem
            border-radius 100%
            color white
            line-height 6.6rem
            text-shadow none

            &:before
                font-size 4rem

.section-caption
    absolute left 0 bottom
    padding 0.3rem 0.6rem
    font-family $font-secondary
    font-size 1.1rem
    font-weight bold
    line-height 1.2

.content-wrapper
    display table
    width 100%
    height 100%
    color white

.content-inner
    display table-cell
    width 100%
    height 100%
    padding 10% 0 30%
    vertical-align middle

/* Media queries */
@media $media-md
    .project-title
        @extends .pb1
        min-height 7.2rem
        font-size 7.2rem

    .project-summary
        max-width 75%

@media $media-lg
    .section-heading
        min-height 100%

    .content-inner
        padding-bottom 0

@media $media-max
    .project-title
        @extends .pb1
        min-height 12rem
        font-size 12rem

    .project-summary
        max-width 60%
        font-size 3.6rem
