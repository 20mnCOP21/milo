/* Wrapper for the slide container and indicators */
.carousel
    position: relative

    /* Specific fixed-height formats */
    /* widescreen (16/9) */
    &.wide-screen
        width 100%
        padding-bottom 60% /* fallback */
        padding-bottom calc(56.25% + 7rem)

        .carousel-inner
            absolute top 0 bottom 0

            > .item
                height 100%
                padding bottom 7.2rem

                img
                    width 100%
                    height auto

            .item-media
                height 90% /* fallback */
                height calc(100% - 7.2rem)
                overflow hidden

        iframe
            absolute top 0 left 0
            width 100%
            height 100%

        .oembedall-container
            height 100%
            padding-bottom 0

    /* full width */
    &.full-width
        .carousel-caption
            position static

        .oembedall-container
            text-align center

@media $media-lg
    .carousel
        &.full-width
            .item-media
                position relative
                padding-bottom 30%

        iframe
        img
            position absolute!important
            top 0
            left 0
            width 100%
            height 100%

.carousel-inner
    position relative
    overflow hidden
    width 100%

.carousel-inner
    > .item
        display none
        position relative
        transition 0.6s ease-in-out left

    > .item > img,
    > .item > a > img
        @extends .img-responsive
        line-height 1

    > .active,
    > .next,
    > .prev
        display block

    > .active
        left 0

    > .next,
    > .prev
        position absolute
        top 0
        width 100%

    > .next
        left 100%

    > .prev
        left -100%

    > .next.left,
    > .prev.right
        left 0

    > .active.left
        left -100%

    > .active.right
        left 100%

.carousel-indicators
    position absolute
    left 50%
    bottom 2rem
    z-index 15
    list-style none
    text-align center

    li
        display inline-block
        width 1.2rem
        height 1.2rem
        text-indent -999px
        border 2px solid  $color-base
        border-radius 0.6rem
        cursor pointer
        background-color $color-base \9
        background-color rgba($color-base, 0)

    .active
        background-color  $color-base

.carousel-caption
    @extends .inline-block
    font-size 1.8rem
    line-height 1.5

.item-title
    @extends .color-base-lt-3
    padding-bottom 0.6rem
    font-family $font-headings
    font-size 6rem
    font-weight 900
    line-height 1
