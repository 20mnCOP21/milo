/* Typography */
$font-base = 'Helvetica Neue', Helvetica, Arial, sans-serif  // texte courant, corps de texte
$font-headings = 'Open Sans'  // titres
$font-secondary = 'Open Sans' // call to action... etc.
$font-icon = '20mn' // call to action... etc.
html
    font-family sans-serif // 2
    font-size 62.5% // 1
    text-size-adjust 100% // 3

body
    background white
    color $color-base
    font-family $font-base
    font-size 1.8rem
    line-height 1.5
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale /* FF */

h1
.h1
    font-size 4.8rem

h2
.h2
    font-size 3.6rem

h3
.h3
    font-size 2.4rem

h4
.h4
    font-size 2.1rem

h5
.h5
    font-size 1.8rem

h6
.h6
    font-size 1.5rem

for $i in 1..6
    h{$i}, .h{$i}
        font-family $font-headings
        font-weight normal

hr
    clear both
    background-color $color-base
    border 0
    height 1px
    margin 2.4rem 0 4.8rem

tt
code
kbd
samp
pre
    border-radius 0.2rem
    background-color $color-bg-base
    font-size 1.2em /* em value to make it relative to the body text size */

small
    font-size .75em

/* Tables */
table
    border-collapse collapse
    border-spacing 0
    border-width 0
    empty-cells show
    background-color $color-bg-base

thead
    tr
        background-color $color-base
        color white

td
th

    border-width 0
    padding 0.6rem 1.2rem

blockquote
    font-family $font-secondary
    font-size 4.2rem
    font-style italic
    line-height 1

    &:before
    &:after
        @extends sub
        font-family $font-base
        font-size 6rem
        line-height 0


    &:before
        content "\201C"

    &:after
        content "\201D"

    &.column
        font-size 3rem

    .bigger
        font-size 4.8rem

    .xl-bigger
        font-size 6rem

    .quote-source
        padding-top 1.2rem
        font-size 1.8rem

/* Media Queries */
@media $media-xs
    html
        font-size 50%

    body
        font-size 2.4rem

    tr
        border-bottom 1px solid

    td
    th
        display block
        text-align left
        border-bottom 1px solid lighten($color-base, 80%)
